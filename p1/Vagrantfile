Vagrant.configure("2") do |config|
    # Utiliser Debian Bookworm 64 bits
    config.vm.box = "debian/bookworm64"
  
    # Désactiver l'insertion automatique de clés SSH
    config.ssh.insert_key = false
  
    # Générer une paire de clés SSH si elle n'existe pas
    unless File.exist?("keys/id_rsa")
      system('mkdir -p keys && ssh-keygen -t rsa -N "" -f keys/id_rsa')
    end
  
    # Partager la clé publique avec les machines virtuelles
    config.vm.provision "file", source: "keys/id_rsa.pub", destination: "/home/vagrant/.ssh/authorized_keys"
  
    # Synchroniser le dossier partagé pour le node-token
    config.vm.synced_folder "./shared", "/vagrant/shared"
  
    # Machine Serveur
    config.vm.define "server" do |server|
      server.vm.hostname = "votreloginS" # Remplacez 'votrelogin' par votre login
      server.vm.network "private_network", ip: "192.168.56.110"
  
      server.vm.provider "virtualbox" do |vb|
        vb.name = "votreloginS"
        vb.cpus = 1
        vb.memory = 1024
      end
  
      server.vm.provision "shell", inline: <<-SHELL
        #!/bin/bash
        set -e
        export DEBIAN_FRONTEND=noninteractive
  
        # Mettre à jour les paquets
        apt-get update
  
        # Installer les dépendances
        apt-get install -y curl
  
        # Installer K3s en mode serveur
        curl -sfL https://get.k3s.io | sh -
  
        # Copier le node-token pour le nœud agent
        mkdir -p /vagrant/shared
        cp /var/lib/rancher/k3s/server/node-token /vagrant/shared/node-token
  
        # Configurer kubectl (K3s fournit déjà kubectl)
        ln -s /usr/local/bin/k3s /usr/local/bin/kubectl || true
  
        # Configurer l'accès SSH sans mot de passe
        mkdir -p /home/vagrant/.ssh
        cat /vagrant/keys/id_rsa.pub >> /home/vagrant/.ssh/authorized_keys
        chown -R vagrant:vagrant /home/vagrant/.ssh
        chmod 600 /home/vagrant/.ssh/authorized_keys
      SHELL
    end
  
    # Machine Worker
    config.vm.define "worker" do |worker|
      worker.vm.hostname = "votreloginSW" # Remplacez 'votrelogin' par votre login
      worker.vm.network "private_network", ip: "192.168.56.111"
  
      worker.vm.provider "virtualbox" do |vb|
        vb.name = "votreloginSW"
        vb.cpus = 1
        vb.memory = 1024
      end
  
      worker.vm.provision "shell", inline: <<-SHELL
        #!/bin/bash
        set -e
        export DEBIAN_FRONTEND=noninteractive
  
        # Attendre que le node-token soit disponible
        while [ ! -f /vagrant/shared/node-token ]; do
          sleep 2
        done
  
        # Lire le node-token
        NODE_TOKEN=$(cat /vagrant/shared/node-token)
  
        # Mettre à jour les paquets
        apt-get update
  
        # Installer les dépendances
        apt-get install -y curl
  
        # Installer K3s en mode agent
        K3S_URL="https://192.168.56.110:6443" K3S_TOKEN=$NODE_TOKEN sh -c 'curl -sfL https://get.k3s.io | sh -'
  
        # Configurer kubectl (K3s fournit déjà kubectl)
        ln -s /usr/local/bin/k3s /usr/local/bin/kubectl || true
  
        # Configurer l'accès SSH sans mot de passe
        mkdir -p /home/vagrant/.ssh
        cat /vagrant/keys/id_rsa.pub >> /home/vagrant/.ssh/authorized_keys
        chown -R vagrant:vagrant /home/vagrant/.ssh
        chmod 600 /home/vagrant/.ssh/authorized_keys
      SHELL
    end
  end
  