Vagrant.configure("2") do |config|
    config.vm.box = "debian/bookworm64"
    config.vm.boot_timeout = 300
  
    # Machine 1 : Serveur
    config.vm.define "userS" do |server|
      server.vm.hostname = "userS"
      server.vm.network "private_network", ip: "192.168.56.110"
      server.vm.provider "virtualbox" do |vb|
        vb.name = "userS"
        vb.memory = 1024
        vb.cpus = 1
      end
      server.vm.provision "shell", path: "scripts/provision_server.sh"
    end
  
    # Machine 2 : Worker
    config.vm.define "userSW" do |worker|
      worker.vm.hostname = "userSW"
      worker.vm.network "private_network", ip: "192.168.56.111"
      worker.vm.provider "virtualbox" do |vb|
        vb.name = "userSW"
        vb.memory = 1024
        vb.cpus = 1
      end
      worker.vm.provision "shell", path: "scripts/provision_worker.sh"
    end
  end
  