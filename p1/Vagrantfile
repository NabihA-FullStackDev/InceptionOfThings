Vagrant.configure("2") do |config|
    config.vm.box = "debian/bookworm64"
    config.vm.provider "virtualbox" do |v|
        v.memory = 512
        v.cpus = 1
    end
  
    config.vm.define "naaliS" do |server|
        server.vm.hostname = "naaliS"
        server.vm.network "private_network", ip: "192.168.56.110"
        server.vm.provision "shell", inline: <<-SHELL
            curl -sfL https://get.k3s.io | sh -
            sudo cp /etc/rancher/k3s/k3s.yaml /home/vagrant/.kube/config
            sudo chown vagrant:vagrant /home/vagrant/.kube/config
        SHELL
    end

    config.vm.define "naaliSW" do |worker|
        worker.vm.hostname = "naaliSW"
        worker.vm.network "private_network", ip: "192.168.56.111"
        worker.vm.provision "shell", inline: <<-SHELL
            curl -sfL https://get.k3s.io | K3S_URL=https://192.168.56.110:6443 K3S_TOKEN=$(cat /var/lib/rancher/k3s/server/node-token) sh -
        SHELL
    end

end
