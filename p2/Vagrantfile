Vagrant.configure("2") do |config|
  config.vm.box = "debian/bookworm64"
  config.vm.network "private_network", ip: "192.168.56.110"
  config.vm.hostname = "naaliS"

  config.vm.provider "virtualbox" do |vb|
    vb.memory = "2048"
    vb.cpus = 2
  end

  config.vm.provision "file", source: "./docker/app1/app1.tar", destination: "/home/vagrant/app1.tar"
  config.vm.provision "file", source: "./docker/app2/app2.tar", destination: "/home/vagrant/app2.tar"
  config.vm.provision "file", source: "./docker/app3/app3.tar", destination: "/home/vagrant/app3.tar"

  config.vm.provision "shell", path: "./scripts/setup.sh"
end
